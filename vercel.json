{
  "version": 2,
  "builds": [
    {
      "src": "frontend/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist"
      }
    },
    {
      "src": "cms/package.json",
      "use": "@vercel/node"
    },
    {
      "src": "backend-express/server/index.js",
      "use": "@vercel/node"
    }
  ],
  "rewrites": [
    {
      "source": "/api/auth/(.*)",
      "destination": "/backend-express/server/index.js"
    },
    {
      "source": "/api/contact",
      "destination": "/backend-express/server/index.js"
    },
    {
      "source": "/api/(.*)",
      "destination": "/cms/api/$1"
    },
    {
      "source": "/admin/(.*)",
      "destination": "/cms/admin/$1"
    },
    {
      "source": "/((?!api/|admin/|assets/|_next/|.*\\..*).*)",
      "destination": "/index.html"
    }
  ],
  "headers": [
    {
      "source": "/index.html",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "no-cache, no-store, must-revalidate"
        }
      ]
    },
    {
      "source": "/assets/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=31536000, immutable"
        }
      ]
    }
  ]
}

